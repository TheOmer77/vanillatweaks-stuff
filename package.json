{
  "name": "vanillatweaks-stuff",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start:api": "bun packages/api/src/index.ts",
    "start:cli": "bun packages/cli/src/index.ts",
    "dev:api": "bun --watch packages/api/src/index.ts",
    "build:cli": "bun run build:cli:js && bun run build:cli:exec",
    "build:cli:js": "esbuild packages/cli/src/index.ts --bundle --platform=node --target=node18 --outdir=dist/",
    "build:cli:exec": "pkg -t node18-linux-x64,node18-windows-x64,node18-macos-x64 -o dist/vanillatweaks dist/index.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/minimist": "^1.2.4",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "bun-types": "^1.0.6",
    "esbuild": "^0.19.5",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "pkg": "^5.8.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
